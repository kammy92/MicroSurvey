<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_margin_small"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin"
    android:layout_marginTop="@dimen/activity_margin_small"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"/>
    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        app:isb_indicator_color="@color/primary"
        app:isb_indicator_text_size="@dimen/text_size_large"
        app:isb_only_thumb_draggable="true"
        app:isb_seek_smoothly="true"
        app:isb_thumb_color="@color/primary"
        app:isb_thumb_size="24dp"
        app:isb_tick_texts_size="@dimen/text_size_large"
        app:isb_track_progress_color="@color/primary"/>
</LinearLayout>